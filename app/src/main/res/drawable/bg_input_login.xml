<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#1A161B22" />
            <stroke
                android:width="2dp"
                android:color="@color/login_blue_tech" />
            <corners android:radius="@dimen/login_input_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A161B22" />
            <stroke
                android:width="1dp"
                android:color="#339AA4B2" />
            <corners android:radius="@dimen/login_input_corner_radius" />
        </shape>
    </item>
</selector>
