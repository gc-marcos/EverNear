<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="12dp">

    <LinearLayout
        android:id="@+id/contacts_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contact 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <EditText
                android:id="@+id/contact_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome 1"
                android:textColor="@color/status_text"
                android:textColorHint="@color/status_text"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <EditText
                android:id="@+id/contact_phone_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone 1"
                android:textColor="@color/status_text"
                android:textColorHint="@color/status_text"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </LinearLayout>

        <!-- Contact 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <EditText
                android:id="@+id/contact_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome 2"
                android:textColor="@color/status_text"
                android:textColorHint="@color/status_text"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <EditText
                android:id="@+id/contact_phone_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone 2"
                android:textColor="@color/status_text"
                android:textColorHint="@color/status_text"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </LinearLayout>

        <!-- Contact 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <EditText
                android:id="@+id/contact_name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome 3"
                android:textColor="@color/status_text"
                android:textColorHint="@color/status_text"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />

            <EditText
                android:id="@+id/contact_phone_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefone 3"
                android:textColor="@color/status_text"
                android:textColorHint="@color/status_text"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/save_contacts_button"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/button_background"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_save"
            android:padding="14dp"
            android:contentDescription="Salvar"
            android:clickable="true"
            android:focusable="true" />

    </androidx.cardview.widget.CardView>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


