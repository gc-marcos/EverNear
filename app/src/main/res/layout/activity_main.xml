<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="8dp">

    <!-- Status Bar no topo -->
    <LinearLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Status de conexão -->
        <TextView
            android:id="@+id/connection_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="●"
            android:textColor="@color/status_connected"
            android:textSize="30sp"
            android:layout_marginEnd="8dp" />

        <!-- Status da bateria -->
        <TextView
            android:id="@+id/battery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textColor="@color/status_text"
            android:textSize="30sp" />

    </LinearLayout>

    <!-- Coração central com animação -->
    <ImageView
        android:id="@+id/heart_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_heart"
        android:contentDescription="Heart rate monitor"
        app:layout_constraintTop_toBottomOf="@id/status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_buttons"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Container dos botões principais -->
    <LinearLayout
        android:id="@+id/main_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botão Frequência -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/button_background"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/heart_rate_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_heart_rate"
                android:padding="14dp"
                android:contentDescription="Heart rate"
                android:clickable="true"
                android:focusable="true" />

        </androidx.cardview.widget.CardView>

        <!-- Botão Localização -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/button_background"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_location"
                android:padding="14dp"
                android:contentDescription="Location"
                android:clickable="true"
                android:focusable="true" />

        </androidx.cardview.widget.CardView>

        <!-- Botão Contatos -->
        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="4dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/button_background"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_contacts"
                android:padding="14dp"
                android:contentDescription="Contacts"
                android:clickable="true"
                android:focusable="true" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- ViewPager para navegação horizontal (inicialmente oculto) -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
