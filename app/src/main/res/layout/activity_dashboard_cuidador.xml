<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vincular Novo Paciente"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_codigo_vincular"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#161B22"
        android:hint="Digite o código de 6 dígitos"
        android:textColor="#FFFFFF"
        android:textColorHint="#9AA4B2"
        android:padding="12dp"
        android:maxLength="6"/>

    <Button
        android:id="@+id/btn_vincular_paciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vincular Paciente"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E10600"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pacientes Vinculados"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="40dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pacientes_vinculados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
