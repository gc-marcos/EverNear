<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_location_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoramento GPS"
        android:textColor="@color/icon_primary"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_current_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ponto inicial nÃ£o definido"
        android:textColor="@color/status_text"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title_location_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_use_gps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="GPS"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/text_current_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_use_map" />

    <Button
        android:id="@+id/button_use_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:text="Mapa"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/text_current_location"
        app:layout_constraintStart_toEndOf="@id/button_use_gps"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/input_radius"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Raio limite (metros)"
        android:inputType="number"
        android:textColor="@color/icon_primary"
        android:textColorHint="@color/status_text"
        android:backgroundTint="@color/icon_primary"
        app:layout_constraintTop_toBottomOf="@id/button_use_gps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Monitoramento parado"
        android:textColor="@color/status_text"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/input_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_start_monitoring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Iniciar Monitoramento"
        android:textAllCaps="false"
        android:backgroundTint="@color/status_connected"
        app:layout_constraintTop_toBottomOf="@id/text_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_stop_monitoring" />

    <Button
        android:id="@+id/button_stop_monitoring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:text="Parar Monitoramento"
        android:textAllCaps="false"
        android:backgroundTint="@color/status_text"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_status"
        app:layout_constraintStart_toEndOf="@id/button_start_monitoring"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>