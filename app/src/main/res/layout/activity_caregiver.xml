<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_caregiver_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_caregiver_screen"
    android:padding="20dp"
    tools:context=".CaregiverActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@string/caregiver_back"
        android:src="@android:drawable/ic_media_previous"
        android:tint="@color/caregiver_text_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caregiver_alert_title"
        android:textColor="@color/caregiver_alert_red"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_alert"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_caregiver_card"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_alert_title"
        android:layout_marginTop="24dp">

        <FrameLayout
            android:id="@+id/avatar_container"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_caregiver_avatar_ring"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_avatar_initials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_caregiver_avatar_inner"
                android:gravity="center"
                android:text="@string/caregiver_patient_initials"
                android:textColor="@color/caregiver_text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caregiver_patient_name"
            android:textColor="@color/caregiver_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/avatar_container"
            app:layout_constraintTop_toTopOf="@id/avatar_container"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tv_bpm_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caregiver_bpm_value"
            android:textColor="@color/caregiver_alert_red"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/avatar_container"
            app:layout_constraintTop_toBottomOf="@id/tv_patient_name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_alert_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/caregiver_alert_message"
            android:textColor="@color/caregiver_text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatar_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:id="@+id/location_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_caregiver_pill"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_alert_message"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tv_location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caregiver_last_location_label"
                android:textColor="@color/caregiver_text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_location_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/caregiver_last_location_value"
                android:textColor="@color/caregiver_text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actions_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/location_container"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_call"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bg_caregiver_button_primary"
                android:text="@string/caregiver_call_button"
                android:textColor="@color/caregiver_text_primary"
                android:textStyle="bold" />

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_map"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/bg_caregiver_button_secondary"
                android:text="@string/caregiver_map_button"
                android:textColor="@color/caregiver_text_primary"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/caregivers_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/card_alert"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_caregiver_avatar_inner"
                android:gravity="center"
                android:text="@string/caregiver_contact_maria_initials"
                android:textColor="@color/caregiver_text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/caregiver_contact_maria"
                android:textColor="@color/caregiver_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_caregiver_avatar_inner"
                android:gravity="center"
                android:text="@string/caregiver_contact_ana_initials"
                android:textColor="@color/caregiver_text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/caregiver_contact_ana"
                android:textColor="@color/caregiver_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_caregiver_avatar_inner"
                android:gravity="center"
                android:text="@string/caregiver_contact_pedro_initials"
                android:textColor="@color/caregiver_text_primary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/caregiver_contact_pedro"
                android:textColor="@color/caregiver_text_secondary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_map"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_caregiver_bottom_bar"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:contentDescription="@null"
            android:src="@android:drawable/ic_menu_mapmode"
            android:tint="@color/caregiver_text_secondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/caregiver_bottom_map"
            android:textColor="@color/caregiver_text_secondary"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
