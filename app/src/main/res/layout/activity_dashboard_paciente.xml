<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1117"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_welcome_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá, Paciente"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#161B22"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seu Código de Vínculo:"
                android:textColor="#9AA4B2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_codigo_vinculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC123"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btn_share_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compartilhar Código"
                android:layout_marginTop="16dp"
                android:backgroundTint="#E10600"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_status_vinculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status do vínculo"
        android:textColor="#9AA4B2"
        android:layout_marginTop="24dp"
        android:textAlignment="center"/>
</LinearLayout>
